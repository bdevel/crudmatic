<nav class="bg-white shadow-sm border-b border-gray-200 mb-6">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center space-x-4">
        <% if request.path != index_path(controller.model_class) %>
          <%= link_to 'javascript: window.history.back()', class: 'inline-flex items-center px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500' do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back
          <% end %>
        <% end %>

        <%= link_to index_path(controller.model_class), class: "inline-flex items-center px-3 py-2 text-sm font-medium rounded-md #{request.path == index_path(controller.model_class) ? 'text-blue-600 bg-blue-100' : 'text-gray-700 hover:text-gray-900 hover:bg-gray-100'}" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
          </svg>
          View All
        <% end %>

        <% if action_ok?(local_assigns[:actions], :create) %>
          <%= link_to new_path(controller.model_class), class: "inline-flex items-center px-3 py-2 text-sm font-medium rounded-md #{request.path == new_path(controller.model_class) ? 'text-green-600 bg-green-100' : 'text-gray-700 hover:text-gray-900 hover:bg-gray-100'}" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            New
          <% end %>
        <% end %>

        <% # Show/Edit/Delete buttons only appear when viewing/editing a specific record %>
        <% if local_assigns[:record] && !local_assigns[:record].is_a?(Class) %>
          <% if action_ok?(local_assigns[:actions], :show) && request.path != index_path(controller.model_class) && request.path != new_path(controller.model_class) %>
            <%= link_to view_path(local_assigns[:record]), class: "inline-flex items-center px-3 py-2 text-sm font-medium rounded-md #{request.path == view_path(local_assigns[:record]) ? 'text-blue-600 bg-blue-100' : 'text-gray-700 hover:text-gray-900 hover:bg-gray-100'}" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
              View
            <% end %>
          <% end %>

          <% if action_ok?(local_assigns[:actions], :update) && request.path != index_path(controller.model_class) && request.path != new_path(controller.model_class) %>
            <%= link_to edit_path(local_assigns[:record]), class: "inline-flex items-center px-3 py-2 text-sm font-medium rounded-md #{request.path == edit_path(local_assigns[:record]) ? 'text-yellow-600 bg-yellow-100' : 'text-gray-700 hover:text-gray-900 hover:bg-gray-100'}" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              Edit
            <% end %>
          <% end %>

          <% if action_ok?(local_assigns[:actions], :destroy) && request.path != index_path(controller.model_class) && request.path != new_path(controller.model_class) %>
            <%= link_to local_assigns[:record], data: { confirm: "Are you sure you want to delete #{local_assigns[:record]}?" }, method: :delete, class: 'inline-flex items-center px-3 py-2 text-sm font-medium text-red-700 hover:text-red-900 hover:bg-red-100 rounded-md' do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              Delete
            <% end %>
          <% end %>
        <% end %>
      </div>

      <div class="flex items-center space-x-4">
        <% if can_search?(controller.model_class) %>
          <form class="flex items-center space-x-2" role="search" action="">
            <input class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" type="search" placeholder="Search" aria-label="Search" value="<%= params[:q] %>" name="q">
            <button class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" type="submit">
              Search
            </button>
          </form>
        <% end %>
        
        <% if can_filter?(controller.model_class) %>
          <%= render 'crudmatic/nav_filter_dropdowns', model_class: controller.model_class %>
        <% end %>
      </div>
    </div>
  </div>
</nav>