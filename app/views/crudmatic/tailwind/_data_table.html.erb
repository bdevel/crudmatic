<% # Alternative table layout for data display %>
<div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-lg">
  <table class="min-w-full divide-y divide-gray-300">
    <thead class="bg-gray-50">
      <tr>
        <% if local_assigns[:show_actions] %>
          <th scope="col" class="relative px-6 py-3 w-1">
            <span class="sr-only">Actions</span>
          </th>
        <% end %>
        <% (local_assigns[:attributes] || []).each_with_index do |attr, index| %>
          <% is_last = index == (local_assigns[:attributes] || []).length - 1 %>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider<%= ' w-full' if is_last %>">
            <%= model_attr_label(local_assigns[:records]&.first, attr) rescue attr.to_s.humanize %>
          </th>
        <% end %>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200 bg-white">
      <% (local_assigns[:records] || []).each_with_index do |record, index| %>
        <tr class="<%= index.even? ? 'bg-white' : 'bg-gray-50' %>">
          <% if local_assigns[:show_actions] %>
            <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6 w-1">
              <div class="flex items-center justify-end space-x-2">
                <%= link_to "View", view_path(record), class: "text-blue-600 hover:text-blue-900" %>
                <%= link_to "Edit", edit_path(record), class: "text-yellow-600 hover:text-yellow-900" %>
              </div>
            </td>
          <% end %>
          <% (local_assigns[:attributes] || []).each_with_index do |attr, attr_index| %>
            <% is_last = attr_index == (local_assigns[:attributes] || []).length - 1 %>
            <td class="px-6 py-4 text-sm text-gray-900<%= is_last ? ' w-full' : ' whitespace-nowrap' %>">
              <%= formatted_value(record, attr, :listing) rescue '' %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>